<h1>Books</h1>

	<table border='0'>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr><% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></td>
		</tr>
		<% end %>
	</table>

	<% if @book.errors.any? %>
	  <div>
	  	<h3><%= @book.errors.count %>件のエラーが発生しました</h3>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

<h2>New book</h2>

<%= form_for(@book, url:'/books') do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>

	<p>body</p>
	<%= f.text_area :body %><br>
	<%= f.submit'Create Book' %>

<% end %>